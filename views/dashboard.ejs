<body>

    <header>
        <div id="overlay" onclick="toggleSidebar()"></div>

        <div class ="container">
        <div class="menu-icon" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </div>
        <div class ="container">
            <h1>Welcome<%= user ? ', ' + user.username : '' %> <i class="fas fa-user"></i></h1>
            <div class="sidebar" id="sidebar">
                <a href="/about-us"><i class="fas fa-info-circle"></i> About Us</a>
                <a href="/contact-us"><i class="fas fa-envelope"></i> Contact Us</a>
                <a href="/privacy-policy"><i class="fas fa-lock"></i> Privacy Policy</a>
            </div>
        </div>
    </header>

    <div class="container mt-5">

        <% if (user) { %>
            <section class="profile-section">
                <h2>Your Profile</h2>
                <p><i class="fas fa-user"></i> Username: <%= user.username %></p>
                <p><i class="fas fa-at"></i> Email: <%= user.email %></p>
            </section>

            <section class="post-section mt-4">
                <h2>Post a Link</h2>
                <form action="/create-post" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title"><i class="fas fa-heading"></i> Title:</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="link"><i class="fas fa-link"></i> Link:</label>
                        <input type="text" class="form-control" id="link" name="link" required>
                    </div>
                    <div class="form-group">
                        <label for="category"><i class="fas fa-folder"></i> Category:</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="Entertainment">Entertainment</option>
                            <option value="Mods Download">Mods Download</option>
                            <option value="Education">Education</option>
                            <option value="Live Links">Live Links</option>
                            <option value="OTTs">OTTs</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="content"><i class="fas fa-file-alt"></i> Content:</label>
                        <textarea class="form-control" id="content" name="content" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="image"><i class="fas fa-image"></i> Image:</label>
                        <input type="file" class="form-control-file" id="image" name="image" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Submit</button>
                </form>
            </section>
        <% } else { %>
            <section class="auth-section mt-4">
                <div class="auth-buttons">
                    <a href="/login" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Login</a>
                    <a href="/sign" class="btn btn-success"><i class="fas fa-user-plus"></i> Sign Up</a>
                </div>
            </section>
        <% } %>

        <section class="why-built-section mt-4">
            <h2 class="why-built">Why I Built This Website ?</h2>
            <p class="why-built">To unite passions and foster meaningful conversations. Explore, share, and connect in a world of limitless possibilities.</p>
        </section>

        <section class="info-section mt-4">
            <h2 class="info">Disclaimer!!</h2>
            <p class="info">"Don't post or upload any unwanted or illegal content links. If you do, it will be removed by the database administrator."</p>
        </section>

        <section class="category-section mt-4">
            <h2>Filter by Category:</h2>
            <ul class="category-list">
                <li><a href="/"><i class="fas fa-globe"></i> All</a></li>
                <li><a href="/?category=Entertainment"><i class="fas fa-film"></i> Entertainment</a></li>
                <li><a href="/?category=Mods Download"><i class="fas fa-download"></i> Mods Download</a></li>
                <li><a href="/?category=Education"><i class="fas fa-graduation-cap"></i> Education</a></li>
                <li><a href="/?category=Live Links"><i class="fas fa-play"></i> Live Links</a></li>
                <li><a href="/?category=OTTs"><i class="fas fa-tv"></i> OTTs</a></li>
                <li><a href="/?category=Others"><i class="fas fa-ellipsis-h"></i> Others</a></li>
            </ul>
        </section>

        <section class="posts-section mt-4">
            <h2>Posts</h2>
            <% if (error) { %>
                <p>Error: <%= error %></p>
            <% } %>
            <form action="/" method="get" class="form-inline">
                <div class="form-group">
                    <label for="search">Search by Title:</label>
                    <input type="text" class="form-control" id="search" name="search" oninput="searchPosts()">
                </div>
                <button type="submit" class="btn btn-primary ml-2">Search</button>
            </form>
            <ul class="posts-list">
                <% for (const category in posts) { %>
                    <h3><%= category %></h3>
                    <% posts[category].forEach(post => { %>
                        <li class="post-container">
                            <div class="post-image-container">
                                <% if (post.image && post.image.data) { %>
                                    <img src="data:<%= post.image.contentType %>;base64,<%= post.image.data.toString('base64') %>" alt="Post Image" class="post-image">
                                <% } %>
                            </div>
                            <hr>
                            <div class="post-content">
                                
                                <div class="post-header">
                                    <strong><%= post.userId.username %>:</strong>
                                    <h3><a href="/post/<%= post._id %>"><%= post.title %></a></h3>
                                </div>
                    
                                <div class="post-meta">
                                    <strong>Category:</strong> <%= post.category %><br>
                                    <strong><i class="fas fa-thumbs-up"></i></strong> <%= post.likes.length %>
                                    <strong><i class="fas fa-thumbs-down"></i></strong> <%= post.dislikes.length %><br>
                                    <small><%= timeAgo(post.timestamp) %></small>
                                </div>
                    
                               
                            </div>
                        </li>
                    <% }); %>
                    
                <% } %>
            </ul>
            <% if (user) { %>
                <a href="/logout" class="btn btn-danger mt-3">Logout</a>
            <% } %>
        </section>

    </div>

    <footer class="mt-5">
        <div class="container">
            <!-- Your footer content goes here -->
            &copy; 2024 itslinked.in -by nikki 
        </div>
    </footer>


    <script>
        function timeAgo(timestamp) {
            const now = new Date();
            const postedTime = new Date(timestamp);
            const timeDiff = now - postedTime;
            const seconds = Math.floor(timeDiff / 1000);
            const minutes = Math.floor(seconds / 60);
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);

            if (days > 0) {
                return days + ' day(s) ago';
            } else if (hours > 0) {
                return hours + ' hour(s) ago';
            } else if (minutes > 0) {
                return minutes + ' minute(s) ago';
            } else {
                return 'Just now';
            }
        }

        const showCommentsButtons = document.querySelectorAll('.show-comments-button');
        showCommentsButtons.forEach(button => {
            button.addEventListener('click', () => {
                const postId = button.getAttribute('data-post-id');
                const commentsList = document.querySelector(`.comment-list[data-post-id="${postId}"]`);
                const commentForm = document.querySelector(`.comment-form[data-post-id="${postId}"]`);

                if (commentsList.style.display === 'none' || commentsList.style.display === '') {
                    commentsList.style.display = 'block';
                    commentForm.style.display = 'block';
                    button.textContent = 'Hide Comments';
                } else {
                    commentsList.style.display = 'none';
                    commentForm.style.display = 'none';
                    button.textContent = 'See Comments';
                }
            });
        });

        // Add event listeners for like and dislike buttons
        const likeButtons = document.querySelectorAll('.like-button');
        const dislikeButtons = document.querySelectorAll('.dislike-button');

        likeButtons.forEach(button => {
            button.addEventListener('click', () => {
                const postId = button.getAttribute('data-post-id');
                // Implement the logic for handling a like
                console.log(`Like clicked for post ${postId}`);
            });
        });

        dislikeButtons.forEach(button => {
            button.addEventListener('click', () => {
                const postId = button.getAttribute('data-post-id');
                // Implement the logic for handling a dislike
                console.log(`Dislike clicked for post ${postId}`);
            });
        });
        function searchPosts() {
        const searchInput = document.getElementById('search').value.toLowerCase();
        const posts = document.querySelectorAll('.post-container');

        posts.forEach(post => {
            const title = post.querySelector('.post-content strong').textContent.toLowerCase();
            if (title.includes(searchInput)) {
                post.style.display = 'block';
            } else {
                post.style.display = 'none';
            }
        });
    }
